<h1>Editing photospace</h1>

<% form_for(@photospace, :html => { :multipart => true }) do |f| %>
  <%= f.error_messages %>
  <p>
  <%= f.label 'Zdjecie' %><br />
  <%= f.file_field :photo %>
</p>

  <p>
    <%= f.label :autor %><br />
    <%= f.text_field :autor %>
  </p>
  <p>
    <%= f.label :komentarz %><br />
    <%= f.text_area :komentarz %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @photospace %> |
